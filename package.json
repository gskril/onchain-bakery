{
  "name": "onchain-bakery",
  "private": true,
  "scripts": {
    "web:build": "pnpm shared:build && pnpm --filter=web build",
    "web:dev": "pnpm shared:build && pnpm --filter=web dev",
    "backend:build": "pnpm shared:build && pnpm --filter=backend build",
    "backend:start": "pnpm shared:build && pnpm --filter=backend start",
    "shared:build": "pnpm --filter=shared build"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "prettier": "^3.3.1",
    "typescript": "^5.2.2"
  }
}
